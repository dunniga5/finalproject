<!-- Validation failure messages -->
<% if @recipe_item.errors.any? %>
  <% @recipe_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Recipe Item #<%= @recipe_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_recipe_item/<%= @recipe_item.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

    
      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="control-label">
          Quantity
        </label>

        <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @recipe_item.quantity %>">
      </div>

      <!-- Label and input for unit -->
      <div class="form-group">
        <label for="unit" class="control-label">
          Unit
        </label>

        <input type="text" id="unit" name="unit" placeholder="Unit" class="form-control" value="<%= @recipe_item.unit %>">
      </div>

      <!-- Label and input for note -->
      <div class="form-group">
        <label for="note" class="control-label">
          Note
        </label>

        <input type="text" id="note" name="note" placeholder="Note" class="form-control" value="<%= @recipe_item.note %>">
      </div>

      <!-- Label and input for ingredient_id -->
      <div class="form-group">
        <label for="ingredient_id" class="control-label">
          Ingredient
        </label>

        <input type="text" id="ingredient_id" name="ingredient_id" placeholder="Ingredient" class="form-control" value="<%= @recipe_item.ingredient_id %>">
      </div>

      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="control-label">
          Recipe
        </label>

        <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @recipe_item.recipe_id %>">
      </div>

      <button class="btn btn-warning">
        Update Recipe Item
      </button>
      or
      <a href="/recipe_items/<%= @recipe_item.id %>">Cancel</a>
    </form>
  </div>
</div>
