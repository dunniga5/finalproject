<div class="page-header">
  <h3>Recipe Item #<%= @recipe_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Quantity</dt>
      <dd><%= @recipe_item.quantity %></dd>

      <dt>Unit</dt>
      <dd><%= @recipe_item.unit %></dd>

      <dt>Note</dt>
      <dd><%= @recipe_item.note %></dd>

      <dt>Ingredient</dt>
      <dd><%= @recipe_item.ingredient_id %></dd>

      <dt>Recipe</dt>
      <dd><%= @recipe_item.recipe_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/recipe_items" class="btn btn-primary">
        Back
      </a>
      <a href="/recipe_items/<%= @recipe_item.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_recipe_item/<%= @recipe_item.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
